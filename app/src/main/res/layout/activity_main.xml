<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pic"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/search_component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        >
        <ImageView
            android:id="@+id/iv_user_info"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_user"
            android:layout_marginEnd="10dp"/>
        <EditText
            android:id="@+id/et_music_input"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:lines="1"
            android:background="@drawable/search_music_edit_text"
            android:textColorHint="#BFBFBF"
            android:textColor="#FB40E0"
            android:gravity="center_vertical"
            android:hint="@string/search_music_hint"/>
        <Button
            android:id="@+id/btn_music_search"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@drawable/search_music_button_bg"
            android:text="搜索"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_music_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"/>
</LinearLayout>